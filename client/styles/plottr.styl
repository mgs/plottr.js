/* CSS declarations go here */
@import url(https://fonts.googleapis.com/css?family=Oswald\|Share\+Tech\+Mono\|Cutive\+Mono\|VT323\|Droid\+Sans\+Mono);

p
  p()
  margin 0px 0px -2px 10px

* body
  width 100%
  height 100%
  padding 0px
  margin 0px
  overflow hidden
  font-family 'Share Tech Mono'
  text-align right

#pleaseWait
  color black
  background rgba(200,0,0,0.7)
  //margin-left 35%

#cursorValue
  display block
  color black
  position absolute
  width 100%
  //background rgba(40,0,100,0.8)
  background rgba(0,0,0,0.8)
  z-index 99
  p
    margin-right 10px

#svg
  position relative
  background rgba(0,0,0,0.1)
  z-index -99

#penState
  color green

#error
  color red

.val
  color rgb(0,200,200)

.chart rect
  fill steelblue

.chart text
  fill white
  font 10px sans-serif
  text-anchor end

.hidden
  display none

.no-error
  color rgb(0,255,90)

.error
  color rgb(255,0,0)